datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  name      String
  payload   Json
  source    String?  // e.g. "api" / "facebook"
}
