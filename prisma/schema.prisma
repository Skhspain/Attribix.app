generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // local dev
  url      = env("DATABASE_URL") // "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean?
  locale        String?
  collaborator  Boolean?
  emailVerified Boolean?
}

model TrackedEvent {
  id        String   @id @default(cuid())
  eventName String
  createdAt DateTime @default(now())
  source    String?
  sessionId String?
}

model Purchase {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  totalValue Float
  currency   String   @default("USD")
}

model AdSpendDaily {
  id    String   @id @default(cuid())
  date  DateTime
  spend Float
}
