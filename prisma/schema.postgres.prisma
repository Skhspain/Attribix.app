// prisma/schema.postgres.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean?
  locale        String?
  collaborator  Boolean?
  emailVerified Boolean?
}

model TrackedEvent {
  id        String   @id @default(cuid())
  eventName String
  createdAt DateTime @default(now())
  source    String?
  sessionId String?
}

model Purchase {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  totalValue Float
  currency   String   @default("USD")
}

model AdSpendDaily {
  id    String   @id @default(cuid())
  date  DateTime
  spend Float
}

model TrackingSettings {
  id         String   @id @default(cuid())
  shop       String   @unique
  // GA4
  ga4Id      String?   // e.g. G-XXXX
  ga4Secret  String?   // GA4 Measurement Protocol API Secret
  // Meta (Facebook)
  fbPixelId  String?
  fbToken    String?   // System User Access Token (ads_management)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}
